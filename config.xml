<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ethereal.igalen" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iGalen International</name>
    <description>
        Official Android app for iGalen.
    </description>
    <author email="udithabandara9@gmail.com" href="http://udithabandara.github.io">
        Uditha Bandara
    </author>
    <content src="index.html" />
	<icon src="img/icon.png" role="default"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <allow-intent href="market:*" />
		<icon src="res/mipmap-ldpi/icon.png" density="ldpi" />
		<icon src="res/mipmap-ldpi/icon.png" density="ldpi" />
        <icon src="res/mipmap-mdpi/icon.png" density="mdpi" />
        <icon src="res/mipmap-hdpi/icon.png" density="hdpi" />
        <icon src="res/mipmap-xhdpi/icon.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <engine name="android" spec="~6.1.2" />
</widget>
